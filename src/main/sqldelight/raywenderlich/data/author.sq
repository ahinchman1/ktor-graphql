import kotlin.collections.List;

CREATE TABLE author(
    author_id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    articles TEXT AS List<Int> NOT NULL
);

insertAuthor:
INSERT INTO author (author_id, name, articles)
VALUES (?, ?, ?);

selectAllAuthors:
SELECT *
FROM author;

updateArticles:
UPDATE author
SET articles = :newList;

selectAllTutorialsFromAuthor:
SELECT *
FROM tutorial
JOIN author ON author.author_id = tutorial.tutorial_author;